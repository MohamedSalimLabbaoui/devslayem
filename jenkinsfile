pipeline {
    agent any

    // AJOUTEZ CETTE SECTION TRIGGERS
    triggers {
        pollSCM('')  // Vide = déclenchement par webhook uniquement
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/MohamedSalimLabbaoui/devslayem.git'
            }
        }

        stage('Build') {
            steps {
                echo "Building project..."
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
            }
        }
    }

    post {
        success {
            emailext (
                to: 'labbaouisalim749@gmail.com',
                subject: "Build SUCCESS",
                body: "Le pipeline a réussi."
            )
        }
        failure {
            emailext (
                to: 'labbaouisalim749@gmail.com',
                subject: "Build FAILED",
                body: "Le pipeline a échoué."
            )
        }
    }
}