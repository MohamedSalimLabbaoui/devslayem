pipeline {
    agent any

    tools {
        maven 'maven3'    // Nouveau nom
        jdk 'JDK17'       // Nouveau nom
    }

    stages {
        stage('Checkout') {
            steps {
                echo "üì• Cloning repository..."
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "üî® Building project..."
                sh 'mvn clean install -DskipTests'
            }
        }
    }

    post {
        always {
            echo "üéâ Build completed!"
        }
        success {
            emailext(
                to: 'labbaouisalim749@gmail.com',
                subject: "‚úÖ SUCCESS - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "Le build a r√©ussi! Voir: ${env.BUILD_URL}"
            )
        }
        failure {
            emailext(
                to: 'labbaouisalim749@gmail.com',
                subject: "‚ùå FAILED - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "Le build a √©chou√©! Voir: ${env.BUILD_URL}"
            )
        }
    }
}